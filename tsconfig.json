{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": "./",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./bin",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,

    /* typescript check options */
    "strict": true,
    "preserveConstEnums": true,
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "compileOnSave": true,
  "include": [],
  "exclude": [
    ".git",
    "node_modules"
  ]
}
